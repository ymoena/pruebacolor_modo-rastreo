<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SampleActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elija el (los) robot(s) que quiera utilizar"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/r_rojo"
        android:layout_alignRight="@+id/r_rojo"
        android:layout_alignEnd="@+id/r_rojo"
        android:layout_alignLeft="@+id/r_rojo"
        android:layout_alignStart="@+id/r_rojo" />


    <RadioButton
        android:id="@+id/r_rojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/r_azul"
        android:layout_alignLeft="@+id/r_azul"
        android:layout_alignRight="@+id/r_azul"
        android:layout_alignStart="@+id/r_azul"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:checked="false"
        android:text="Robot Rojo"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:buttonTint="@android:color/background_dark" />

    <RadioButton
        android:id="@+id/r_azul"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_rojo"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:text="Robot Azul"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:buttonTint="@android:color/background_dark" />

    <RadioButton
        android:id="@+id/r_verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/r_azul"
        android:layout_alignLeft="@+id/r_azul"
        android:layout_alignRight="@+id/r_azul"
        android:layout_alignStart="@+id/r_azul"
        android:layout_below="@+id/r_azul"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:text="Robot Verde"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:buttonTint="@android:color/background_dark" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:background="@android:color/holo_blue_dark"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Bienvenido a VisiÃ³n Global"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:text="Iniciar"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/eliminar"
        android:layout_alignLeft="@+id/eliminar"
        android:layout_alignStart="@+id/eliminar"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/eliminar"
        android:layout_alignEnd="@+id/eliminar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Modo Rastreo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/r_verde"
        android:layout_alignStart="@+id/r_verde"
        android:layout_below="@+id/r_verde"
        android:backgroundTint="?attr/colorButtonNormal"
        android:text="Limpiar"
        android:textColor="@android:color/background_dark"
        android:layout_alignRight="@+id/r_verde"
        android:layout_alignEnd="@+id/r_verde" />

</RelativeLayout>
