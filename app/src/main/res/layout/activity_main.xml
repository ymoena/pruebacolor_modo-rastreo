<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:backgroundTint="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iniciar"
        android:layout_toStartOf="@+id/iniciar"
        android:background="@android:drawable/alert_dark_frame">

        <com.example.cesar.pruebacolor.MainActivity
            android:id="@+id/java_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/colorv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/colora"
        android:layout_alignRight="@+id/colora"
        android:layout_below="@+id/colora"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:background="@android:color/background_light"
        android:text="Verde"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/colorr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/info"
        android:layout_alignRight="@+id/info"
        android:layout_below="@+id/info"
        android:layout_toRightOf="@+id/frameLayout"
        android:background="@android:color/background_light"
        android:text="Rojo"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/colora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/colorr"
        android:layout_alignRight="@+id/colorr"
        android:layout_below="@+id/colorr"
        android:layout_toRightOf="@+id/frameLayout"
        android:background="@android:color/background_light"
        android:text="Azul"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detener"
        android:layout_alignLeft="@+id/detener"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/detener"
        android:layout_alignTop="@+id/detener"
        android:background="@android:color/holo_blue_dark"
        android:text="Rastrear"
        android:textColor="@android:color/background_light"
        android:visibility="visible" />

    <Button
        android:id="@+id/detener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_red_light"
        android:enabled="false"
        android:text="Detener"
        android:textColor="@android:color/background_light"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:text="Objetivo:"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/frameLayout"
        android:background="@android:color/background_light"
        android:text="or"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/oa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/or"
        android:layout_toRightOf="@+id/or"
        android:background="@android:color/background_light"
        android:text="oa"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/oa"
        android:layout_toEndOf="@+id/oa"
        android:layout_toRightOf="@+id/oa"
        android:background="@android:color/background_light"
        android:text="o3"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:text="Encontrados:"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/colorN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/colorv"
        android:layout_alignRight="@+id/colorv"
        android:layout_below="@+id/colorv"
        android:layout_toRightOf="@+id/frameLayout"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:text="Negro"
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />

    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iniciar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_dark"
        android:elevation="0dp"
        android:text="Enviar"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/encontrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enviar"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:text="Datos no encontrados"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/rastreando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iniciar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:text="Rastreando robot(s)"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/iniciar"
        android:layout_alignBottom="@+id/iniciar"
        android:layout_toEndOf="@+id/or"
        android:layout_toRightOf="@+id/or"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
